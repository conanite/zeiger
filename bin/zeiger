#!/usr/bin/env ruby

require 'socket'
require 'zeiger'

SOCKET_NAME = "./zeiger-index"

command = $*[0]

case command
when "server" ; Zeiger::Server.run *$*
when "search" ; Zeiger::QueryClient.run *$*
when "files"  ; Zeiger::FileListClient.run *$*
end

